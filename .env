# ===========================================
# HMS - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ===========================================
# Database Configuration
# ===========================================
MONGO_URI=mongodb://mongodb:27017/healthcare_db
# For production with authentication:
# MONGO_URI=mongodb://username:password@mongodb:27017/healthcare_db

# ===========================================
# JWT Configuration
# ===========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ===========================================
# API Keys
# ===========================================
# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI (if used)
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Payment Gateway (Razorpay)
# ===========================================
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ===========================================
# SMS Service (Twilio)
# ===========================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# ===========================================
# File Storage (Cloudinary)
# ===========================================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===========================================
# Google OAuth
# ===========================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# Service URLs (for Docker)
# ===========================================
# Backend URL (accessed from AI service)
BACKEND_URL=http://backend:4000/api

# AI Service URL (accessed from backend)
AI_SERVICE_URL=http://ai-service:8000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# ===========================================
# Port Configuration
# ===========================================
PORT=4000
AI_SERVICE_PORT=8000
FRONTEND_PORT=5173

# ===========================================
# Node Environment
# ===========================================
NODE_ENV=production
